<Window x:Class="ShadowWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStyle="None" AllowsTransparency="True">
    <StackPanel Background="LightSteelBlue" MouseDown="StackPanel_MouseDown">
        <CheckBox Content="Enable/Disable Shadow" Name="cbx_IsEnabled" Margin="10" FontSize="20" Foreground="Green" Checked="cbx_IsEnabled_Checked" Unchecked="cbx_IsEnabled_Unchecked"></CheckBox>
    </StackPanel>
</Window>
